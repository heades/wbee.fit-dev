<div class="col mb-4">
  <a href="{% if catalog.redirect %}{{ catalog.redirect }}{% else %}{{ catalog.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if catalog.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=catalog.img sizes="(min-width: 768px) 156px, 50vw" alt="catalog thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if catalog.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ catalog.title }}</h3>
            <p class="card-text">{{ catalog.description }}</p>            
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
